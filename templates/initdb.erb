<%= scope['odoo::odoo_executable'] %> \
--init=all \
--addons-path=<%= scope['odoo::addons_path'] %> \
--stop-after-init \
-r <%= scope['odoo::odoo_user'] %> \
-w <%= scope['odoo::db_password'] %> \
-d <%= scope['odoo::db_user'] %> \
--without-demo=all \
--load-language=<%= scope['odoo::lang'] %> \
--db_host=<%= scope['odoo::db_host'] %> \
--no-database-list 2>&1 | logger -t $(basename $0)


