[Unit]
Description=Advanced OpenSource ERP and CRM server

[Service]
User=<%= scope['odoo::params::odoo_user'] %>
Group=<%= scope['odoo::params::odoo_group'] %>
Type=simple
SyslogIdentifier=odoo
PIDFile=/var/run/odoo/server.pid
ExecStart=/opt/odoo/odoo-bin -c /etc/odoo.conf --no-database-list
ExecStop=/bin/kill $MAINPID

[Install]
WantedBy=multi-user.target
